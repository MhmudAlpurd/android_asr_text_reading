<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:id="@+id/ll_say"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="20dp"
        android:id="@+id/tw_steps"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Steps:"/>
    <TextView
        android:id="@+id/tw_pressMic1"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Press Mic"/>
    <TextView
        android:id="@+id/tw_sayRead"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Say; Hey Buddy"/>
    <TextView
        android:id="@+id/tw_pressMic2"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Press Mic"/>
    <TextView
        android:id="@+id/tw_ReadtheLabel"
        android:gravity="left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Say; Read the Label/Card"/>

</LinearLayout>

<LinearLayout
    android:id="@+id/ll_icMic"
    android:gravity="center"
    android:layout_below="@+id/ll_say"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_mic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/muted_mic" />

</LinearLayout>

<LinearLayout
    android:layout_margin="20dp"
    android:layout_below="@+id/ll_icMic"
    android:id="@+id/ll_commands"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recognized Command:"
        android:id="@+id/tw_recognizedCommand"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tw_recognizedCommand_info"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Module Status"
        android:gravity="center"
        android:id="@+id/tw_moduleStatus"/>

    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tw_moduleStatus_info"/>

</LinearLayout>



</RelativeLayout>